{
  "general_experiment_setup": {
    "experiment_name": "Burst_Scan_Two_BG_Simple",
    "workload_mode": "dynamic",
    "workload_type": "ycsb",
    "random_seed": 42,
    "output_directory": "results",
    "log_level": "INFO",
    "active_strategy": "B7_DYNAMIC_NEED",
    "reporting_interval_seconds": 4,
    "measurement_interval_seconds": 4,
    "data_collection_timeout_seconds": 1.0,
    "_comment": "极简实验：只有两个背景数据库，测试访问模式变化的影响"
  },
  "system_sqlite_config": {
    "page_size_bytes": 4096,
    "total_ram_for_cache_mb": 0.5,
    "_comment": "256页总缓存(1MB)，两个数据库共享"
  },
  "dynamic_workload_phases": [
    {
      "name": "Phase1_Both_Zipfian",
      "duration_seconds": 10,
      "_comment": "0-30秒：两个数据库都是10 TPS，zipfian 1.0",
      "ycsb_config_overrides": {
        "threadcount": 4,
        "tps_distribution_per_db": {
          "db_bg_1": 100,
          "db_bg_2": 100
        },
        "access_pattern_per_db": {
          "db_bg_1": { "distribution": "zipfian", "zipf_alpha": 1 },
          "db_bg_2": { "distribution": "zipfian", "zipf_alpha": 2 }
        }
      }
    },
    {
      "name": "Phase2_BG1_Uniform",
      "duration_seconds": 30,
      "_comment": "30-60秒：db_bg_1改为uniform分布，db_bg_2保持zipf 1.0",
      "ycsb_config_overrides": {
        "threadcount": 4,
        "tps_distribution_per_db": {
          "db_bg_1": 50,
          "db_bg_2": 20
        },
        "access_pattern_per_db": {
          "db_bg_1": { "distribution": "uniform" },
          "db_bg_2": { "distribution": "zipfian", "zipf_alpha": 2 }
        }
      }
    }
  ],
  "database_instances": [
    { "id": "db_bg_1", "db_filename": "data/type2_burst/db_bg_1_opt_5k.sqlite", "base_priority": 1, "ycsb_initial_record_count": 500000, "_comment": "攻击者背景数据库" },
    { "id": "db_bg_2", "db_filename": "data/type2_burst/db_bg_2_opt_5k.sqlite", "base_priority": 1, "ycsb_initial_record_count": 500000, "_comment": "普通背景数据库" }
  ],
  "ycsb_general_config": {
    "ycsb_row_size_bytes": 2048,
    "hot_rate": 0.7,
    "ycsb_workload_proportions": {
      "read": 0.95,
      "update": 0.05,
      "insert": 0,
      "scan": 0.0,
      "read_modify_write": 0.0
    }
  },
  "strategy_configurations": {
    "B7_DYNAMIC_NEED": {
      "active": true,
      "strategy_name": "B7_DYNAMIC_NEED",
      "description": "Dynamic need-based allocation with EMA lag exploitation",
      "fixed_pool_percentage_of_total_ram": 0.01,
      "adjustment_interval_seconds": 8,
      "ema_alpha": 0.3,
      "_comment": "标准B7配置"
    }
  }
}